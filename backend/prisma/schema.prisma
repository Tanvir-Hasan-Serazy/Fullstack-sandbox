generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        Int      @default(autoincrement())
  createdAt DateTime @default(now())
  firstName String
  lastName  String
  age       Int
  email     String   @id @unique
  phone     String
  address   String
  password  String

  @@map(name: "users")
}

model Books {
  id                 Int      @unique @default(autoincrement())
  title              String   @id
  stars              Int
  description        String
  coverImageURL      String?
  cloudinaryPublicId String?
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt

  @@map("books")
}

model NationalID {
  id                 String  @id @unique @default(uuid())
  name               String
  gender             String
  age                Int
  address            String
  bloodGroup         String
  height             Int
  imageURL           String?
  cloudinaryPublicId String?
}
